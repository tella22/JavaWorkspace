import java.util.Scanner;

public class String031 {

	public static void main(String[] args) {
		String frase;
		String palabra;
		int pos=0;

		Scanner teclado = new Scanner(System.in);
		System.out.println("Introduce un frase");
		frase=teclado.nextLine();
		System.out.println("Introduce un palabra de la frase");
		palabra=teclado.nextLine();

		for (pos = frase.indexOf(palabra); pos<frase.length(); pos++){
			
			int pos1=frase.indexOf(palabra)
			
			if(pos1!=-1){
				System.out.println("La palabra se encuentra en la posición: "+ pos);
			}else {
				System.out.println("Palabra no encontrada");
			}
		}
		
		

		

	}

}
