import java.util.Scanner;

public class Strings08 {

	public static void main(String[] args) {
		
		String frase;
		final int max_length=80;
		String may="ABCDEFGHJIKLMNÑOPQRSTUVWXYZ ";
		int pos=0;
		int error=0;

		Scanner teclado = new Scanner(System.in);
		
		do{
			System.out.println("Introduce una frase en mayúsculas");
			frase=teclado.nextLine();
			pos=0;
			for (int cont=0; cont<frase.length(); cont++){
				char caracter = frase.charAt(pos);
				if(may.indexOf(caracter) != -1){
					error=0;
				}else{
					System.out.println("El caracter en posición: "+ pos + " no es mayúscula");
					error = error+1;
				}
				pos++;		
			}
		}while (error!=0);
		
	}

}
